<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <gradient android:angle="-90" android:startColor="#6C0D38" android:endColor="#441329" />
                </shape>
            </item>
            <item android:left="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#FF0000" />
                </shape>
            </item>
            <item android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#00FF00" />
                </shape>
            </item>
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#0000FF" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#D50D38" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#6C0D38" />
            <solid android:color="#441329" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <gradient android:angle="-90" android:startColor="#808080" android:endColor="#808080" />
                </shape>
            </item>
            <item android:left="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#FF0000" />
                </shape>
            </item>
            <item android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#00FF00" />
                </shape>
            </item>
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#0000FF" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#D50D38" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
