<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width=".5dp" android:color="#808080" />
            <gradient  android:angle="-90"  android:startColor="#5A5959" android:endColor="#5A5959"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#808080" />
            <solid  android:color="#5A5959"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width=".5dp" android:color="#5A5959" />
            <gradient  android:angle="-90"  android:startColor="#808080" android:endColor="#808080" />
        </shape>
    </item>
</selector>
